<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Input Numbers"
        android:textColor="#000000"
        android:id="@+id/inputNumberEditTextId"
        android:drawableLeft="@drawable/ic_action_username"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <EditText
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Input Numbers"
        android:textColor="#000000"
        android:id="@+id/khojEditTextId"
        android:drawableLeft="@drawable/ic_action_username"
        android:textSize="20sp"
        android:textStyle="bold"

        />
    <Button
        android:id="@+id/khojButtonId"
        android:text="khoj"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:backgroundTint="#2642D3"
        android:background="@drawable/round"
        />
    <TextView
        android:id="@+id/resultTextViewId"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Result:"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#030526"
        android:textStyle="bold"
        />



</LinearLayout>