<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="6"
    android:background="#FFFFFF"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/signupTextId"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:text="Sign up"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        />

    <EditText

        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Email"
        android:textColor="#312E2E"
        android:id="@+id/signUpEmailEditTextId"
        android:drawableLeft="@drawable/ic_action_username"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Password"
        android:textColor="#312E2E"
        android:id="@+id/signUpPasswordEditTextId"
        android:drawableLeft="@drawable/ic_action_password"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/signUpButtonId"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:backgroundTint="#2642D3"
        android:background="@drawable/round"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Are you already registered? sign In"
        android:gravity="center"
        android:id="@+id/signInTextViewId"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        />

    <ProgressBar
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/progressbarId"
        />



</LinearLayout>